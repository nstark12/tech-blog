<form class="card my-5" id="add-comment">
    <div class="card-header"><h3>Edit Post</h3></div>

    <div class="card-body d-flex flex-column">
        <input type="hidden" hidden="true" id="post-id-edit" name="post_id" value="{{posts.id}}">

        <label for="post-title" class="form-label">Post Title</label>
        <input type="text" id="post-title" name="post-title">

        <label for="post-body" class="form-label">Post Content</label>
        <textarea name="post-body" id="post-body" class="form-input"></textarea>

        <button class="btn btn-danger my-3" id="edit-post">Edit Post</button>
        <button class="btn btn-danger my-3" id="delete-post">Delete Post</button>
    </div>
</form>

<script src="/js/edit-post.js"></script>

