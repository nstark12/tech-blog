{{#if logged_in}}

<form class="card my-5" id="add-comment">
    <div class="card-header"><h3>Add New Comment</h3></div>

    <div class="card-body d-flex flex-column">
        <input type="hidden" id="post-id" name="post_id" value="{{post.id}}">
        <label for="comment-body" class="form-label">Comment</label>
        <textarea name="comment-body" id="comment-body" class="form-input"></textarea>

        <button type="submit" class="btn btn-danger my-3">Submit</button>
    </div>
</form>

{{/if}}

<script src="/js/comment.js"></script>